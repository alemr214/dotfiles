{
  // Font size
  "editor.fontSize": 14,
  // Tab Size
  "editor.tabSize": 2,
  // Cursor style
  "editor.cursorStyle": "line",
  // Word wrap
  "editor.wordWrap": "on",
  // Bracket Colorization
  "editor.bracketPairColorization.enabled": true,
  // Show identation guides
  "editor.guides.indentation": true,
  // Line numbers
  "editor.lineNumbers": "relative",
  // Match brackets
  "editor.matchBrackets": "always",
  // Scrollbar vertical
  "editor.scrollbar.vertical": "hidden",
  // Autoformat
  "editor.formatOnSave": true,
  // Minimap hidden auto
  "editor.minimap.autohide": "mouseover",
  // Minimap size
  "editor.minimap.scale": 2,
  // Save file
  "files.autoSave": "onFocusChange",
  // Save when no errors
  "files.autoSaveWhenNoErrors": true,
  // Trim final newlines
  "files.trimFinalNewlines": true,
  // Browser to use
  "workbench.externalBrowser": "brave",
  // What to open in new window
  "workbench.startupEditor": "terminal",
  // Activity bar location
  "workbench.activityBar.location": "top",
  // Theme
  "workbench.colorTheme": "Catppuccin Mocha",
  // Icons to display
  "workbench.iconTheme": "material-icon-theme",
  // View status bar on Zen mode
  "zenMode.hideStatusBar": false,
  // View numbers on Zen mode
  "zenMode.hideLineNumbers": false,
  // Disable full screen Zen mode
  "zenMode.fullScreen": false,
  // Disable centering the layout
  "zenMode.centerLayout": false,
  // Type of search bar
  "search.defaultViewMode": "tree",
  // Use breakproints for debugger
  "debug.allowBreakpointsEverywhere": true,
  // Show as tree in source control
  "scm.defaultViewMode": "tree",
  // GitHub protocol to connect
  "github.gitProtocol": "ssh",
  // Copilot enable next edit suggestions
  "github.copilot.nextEditSuggestions.enabled": true,
  // Git auto fetch
  "git.autofetch": true,
  // C/C++ IntelliSense engine disabled
  "C_Cpp.intelliSenseEngine": "disabled",
  "C_Cpp_Runner.cppCompilerPath": "clang++",
  "C_Cpp_Runner.cCompilerPath": "clang",
  "C_Cpp_Runner.debuggerPath": "lldb",
  "clangd.checkUpdates": true,
  "codesnap.shutterAction": "copy",
  "cph.language.cpp.Command": "clang++",
  "cph.language.c.Command": "clang",
